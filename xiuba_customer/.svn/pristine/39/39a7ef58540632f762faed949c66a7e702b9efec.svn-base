<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/it_top" />

    <com.smart.library.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/default_line_color" />

            <RelativeLayout
                android:id="@+id/rl_personal_edit_icon"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/personel_icon"
                    android:textColor="@color/personal_icon_name"
                    android:textSize="15sp" />

                <com.smart.library.view.MyImageView
                    android:id="@+id/iv_personal_edit_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16sp"
                    android:src="@drawable/menu_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/default_line_color" />

            <RelativeLayout
                android:id="@+id/rl_personal_edit_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/personel_name"
                    android:textColor="@color/personal_icon_name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_personal_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:hint="请输入昵称"
                    android:textColor="@color/set_item"
                    android:textColorHint="@color/defalute_text_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/iv_order_apply_go" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/default_line_color" />

            <RelativeLayout
                android:id="@+id/rl_personal_edit_sex"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/personel_sex"
                    android:textColor="@color/personal_icon_name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_personal_edit_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:hint="请选择性别"
                    android:textColor="@color/set_item"
                    android:textColorHint="@color/defalute_text_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/iv_order_apply_go" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/default_line_color" />
        </LinearLayout>
    </com.smart.library.view.MyScrollView>

</LinearLayout>