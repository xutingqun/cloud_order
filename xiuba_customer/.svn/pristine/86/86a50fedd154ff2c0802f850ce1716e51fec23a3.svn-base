<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/List_bg"
    android:orientation="vertical" >

    <include layout="@layout/it_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.smart.library.prt.PullToRefreshListView
            android:id="@+id/lv_my_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/List_bg"
            android:divider="@null" />

        <com.smart.library.view.EmptyLayout
            android:id="@+id/eml_my_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/default_line_color" />

            <TextView
                android:id="@+id/tv_my_address_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_line_orange_bg"
                android:gravity="center"
                android:text="@string/my_address_add"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>