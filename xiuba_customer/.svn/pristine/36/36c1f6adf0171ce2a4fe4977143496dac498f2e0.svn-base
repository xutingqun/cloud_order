<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
<include layout="@layout/it_top" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/iv_personal_icon_bg" />

        <com.smart.library.view.MyImageView
            android:id="@+id/iv_personal_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/menu_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="邱莉珠"
        android:textColor="@color/personaml_name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_personal_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="187****2507"
        android:textColor="@color/personaml_phone"
        android:textSize="15sp" />

    <com.smart.library.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_personal_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_order"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/my_order"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_personal_order_num"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/iv_personal_num_bg"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />

                    <RelativeLayout
                        android:id="@+id/rl_personal_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_message"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/message_center"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_personal_message_num"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/iv_personal_num_bg"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />

                    <RelativeLayout
                        android:id="@+id/rl_personal_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_card"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/my_wellat"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />

                    <RelativeLayout
                        android:id="@+id/rl_personal_jifen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_jifeng"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_jifeng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/integer"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_personal_jifeng_num"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/iv_personal_num_bg"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />

                    <RelativeLayout
                        android:id="@+id/rl_personal_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_pay"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_pay_method" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/personal_pay"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />

                    <RelativeLayout
                        android:id="@+id/rl_personal_servise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_personal_servise"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_personal_servise" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/personal_servise"
                            android:textColor="@color/personaml_item"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/defaultTextColor" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.smart.library.view.MyScrollView>

</LinearLayout>