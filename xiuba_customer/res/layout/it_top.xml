<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_top_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:id="@+id/ll_titlev_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:onClick="BackSharingClick" >

            <ImageView
                android:id="@+id/iv_top_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tv_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/defalute_text_color"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_top_center_max"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_top_center"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_top_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="消息"
                android:textColor="@color/defalute_text_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_titlev_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_top_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_launcher"
                android:padding="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_top_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定fffff"
                android:layout_marginRight="10dp"
                android:textColor="@color/defalute_text_color"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>